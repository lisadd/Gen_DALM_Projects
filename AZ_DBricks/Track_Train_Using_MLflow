# Track Model Training by Using MLflow
# MLflow allows you to track experiments, log parameters, metrics, and models. 

import mlflow
from sklearn.metrics import accuracy_score

# Set up MLflow tracking (e.g., to a local directory or a remote server)
mlflow.set_tracking_uri("http://localhost:5000") # Replace with your MLflow tracking server URI
mlflow.set_experiment("Custom Model Training")

with mlflow.start_run():
    # Log parameters
    mlflow.log_param("solver", "liblinear")
    mlflow.log_param("random_state", 42)

    # Train the model
    model = LogisticRegression(solver='liblinear', random_state=42)
    model.fit(X_train, y_train)

    # Make predictions and log metrics
    y_pred = model.predict(X_test)
    accuracy = accuracy_score(y_test, y_pred)
    mlflow.log_metric("accuracy", accuracy)

    # Log the trained model
    mlflow.sklearn.log_model(model, "logistic_regression_model")

    print(f"MLflow run completed. Accuracy: {accuracy}")

